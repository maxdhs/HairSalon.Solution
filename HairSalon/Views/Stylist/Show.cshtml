@{
  Layout = "_Layout";
}

<h1>Complete information for Stylist @Model["stylist"][0].GetName()</h1>
<hr>

<p>name:  @Model["stylist"][0].GetName() </p>
<p>ID:  @Model["stylist"][0].GetId() </p>
<hr>

<a href="/stylists/@Model["stylist"][0].GetId()/delete/">Delete this stylist</a>



<p>Clients</p>
@foreach (var client in Model["clients"])
{
    <li>@client.GetName()</li>
}
<hr>

<p>Add a new client:</p>
<form action='/stylists/@Model["stylist"][0].GetId()/clients/new' method='post'>
  <label for='Name'>Client name: </label>
  <input id='ClientName' name='ClientName' type='text'>
  <button type='submit'>Add client</button>
</form>

<hr>

<p>Specialties</p>
@foreach (var specialty in Model["specialties"])
{
    <li>@specialty.GetName()</li>
}
<hr>

<p>Add a specialty to this stylist.</p>

<form action="/stylists/@Model["stylist"][0].GetId()/specialty/new" method="post">
    <select name="specialtyId" >
            @foreach(var specialty in @Model["allspecialties"])
            {
                <option class="dropdown-item" value=@specialty.GetId()>@specialty.GetName()</option>
            }
    </select>
     <button class="btn btn-primary btn-md" type="submit">Add</button>
</form>


<p>Edit the name of this stylists:</p>
<form action='/stylists/@Model["stylist"][0].GetId()/edit' method='post'>
  <label for='Name'>New Stylist name: </label>
  <input id='newName' name='newName' type='text'>
  <button type='submit'>Change Name</button>
</form>
